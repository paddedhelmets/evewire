# evewire Environment Configuration

# Django Settings
SECRET_KEY=change-this-to-a-random-string-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (optional - defaults to SQLite)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=evewire
# DB_USER=evewire
# DB_PASSWORD=
# DB_HOST=localhost
# DB_PORT=5432

# EVE SSO Configuration
# Get these from https://developers.eveonline.com/
EVE_CLIENT_ID=your-client-id-here
EVE_CLIENT_SECRET=your-client-secret-here
EVE_CALLBACK_URL=http://localhost:8000/oauth/callback/

# ESI Configuration
# Compatibility date for ESI API versioning (YYYY-MM-DD format)
# See: https://developers.eveonline.com/docs/services/esi/overview/
# API changes at 11:00 UTC, so current date is (now - 11 hours)
ESI_COMPATIBILITY_DATE=2024-01-01

# Django Q2 (Background Tasks)
Q_WORKERS=1
Q_TIMEOUT=30
Q_RETRY=120
Q_QUEUE_LIMIT=50
Q_BULK=1
Q_SAVE_LIMIT=250
Q_CPU_AFFINITY=1

# Optional: Redis for django-q2 (multi-worker deployments)
# REDIS_URL=redis://localhost:6379/0

# Production Settings
# HTTPS_ONLY=False
# DJANGO_LOG_LEVEL=INFO
